<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="MOHAMAD SAID RABE &amp; TARIK INCE \n Android RC Car Controlling App With Arduino"
        android:gravity="center"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:id="@+id/textView"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/holo_blue_dark"/>

    <ImageView
        app:srcCompat="@drawable/arduino"
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/btWelcomingStart"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="22dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/likeasir2"
        android:id="@+id/imageView"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="START!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btWelcomingStart"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

</RelativeLayout>
